<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="10dp">

    <LinearLayout
        android:id="@+id/lay_item_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/recycler_view_item_background"
        android:gravity="center_horizontal"
        android:weightSum="10">
        <TextView
            android:id="@+id/txv_request_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="16sp"
            android:text="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:id="@+id/txv_vehicle_number"
            android:textSize="16sp"
            android:text="394593759438"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="16sp"
            android:id="@+id/txv_registration_number"
            android:text="3948"/>
    </LinearLayout>

</RelativeLayout>